AT_BESCMD_RESPONSE_TEST([fnoc1.1.bescmd])
AT_BESCMD_RESPONSE_TEST([fnoc1.2.bescmd])
AT_BESCMD_BINARYDATA_RESPONSE_TEST([fnoc1.3.bescmd])
